{% extends 'base.html.twig' %}

{% block body %}
    <div class="row mt-4">
        <div class="col-12">
            <h1>Inscription sur le site</h1>

            {{ form_start(form) }}
                {{ form_row(form.username, {'label': "Nom d'utilisateur", 'attr': {'placeholder': "Nom d'utilisateur..."}}) }}
                {{ form_row(form.email, {'label': "Adresse e-mail",'attr': {'placeholder': "Adresse e-mail..."}}) }}
                {{ form_row(form.password, {'label': "Mot de passe",'attr': {'placeholder': "Mot de passe..."}}) }}
                {{ form_row(form.confirm_password, {'label': "Répétez votre mot de passe", 'attr': {'placeholder': "Confirmation du mot de passe..."}}) }}
                <button type="submit" class="btn btn-success">Inscription !</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}