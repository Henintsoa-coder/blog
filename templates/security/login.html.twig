{% extends 'base.html.twig' %}

{% block body %}
    <div class="mt-4">
        <h1 class="mb-4">Connectez-vous !</h1>

        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <input placeholder="Adresse email..." type="text" required name="_username" class="form-control" >
            </div>
            <div class="form-group">
                <input placeholder="Mot de passe..." type="password" required name="_password" class="form-control" >
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion !</button>
            </div>
        </form>
    </div>
{% endblock %}